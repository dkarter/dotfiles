# vim: ft=toml
theme = tokyonight-storm
# macos-titlebar-style = transparent
background-opacity = 0.9
background-blur = true

font-size = 18

background = #000000
macos-titlebar-proxy-icon = hidden
title = "Ghostty"

#### KEYBINDS
# open new tab
keybind = super+shift+t=text:\x1ac
# navigate tabs
keybind = super+shift+left_bracket=text:\x1ap
keybind = super+shift+right_bracket=text:\x1an
keybind = super+one=text:\x1a1
keybind = super+two=text:\x1a2
keybind = super+three=text:\x1a3
keybind = super+four=text:\x1a4
keybind = super+five=text:\x1a5
keybind = super+six=text:\x1a6
keybind = super+seven=text:\x1a7
keybind = super+eight=text:\x1a8
keybind = super+nine=text:\x1a9
# move tabs
# keybind = super+shift+left=text

# open sesh
keybind = super+j=text:\x1aT
# open tmux windows
keybind = super+k=text:\x1aP
# toggle last session
keybind = super+l=text:\x1aL

# vimium like actions (tmux fingers)
keybind = super+f=text:\x1aF
